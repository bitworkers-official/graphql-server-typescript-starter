{
  "name": "graphql-typescript-starter",
  "version": "1.0.0",
  "description": "Starter Template for GraphQL & Typescript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js"
  },
  "keywords": [
    "GraphQL",
    "TypeScript"
  ],
  "author": "Bitworkers",
  "license": "MIT",
  "dependencies": {
    "graphql-yoga": "^1.17.1",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-bitworkers": "^1.10.1",
    "graphqlgen": "0.6.0-rc2",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.9",
    "prettier": "^1.16.1",
    "prettier-config-bitworkers": "^1.4.1",
    "ts-node": "8.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
